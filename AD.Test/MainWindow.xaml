<Window x:Class="AD.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AD.Test"
        mc:Ignorable="d"
        Title="AD.Test" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <UniformGrid Columns="2" VerticalAlignment="Top">
            <TextBlock>Computer domain</TextBlock>
            <TextBlock x:Name="computer_domain"/>
            <TextBlock>User identiy</TextBlock>
            <TextBlock/>
            <TextBlock>Domain</TextBlock>
            <Grid>
                <TextBox/>
                <TextBlock Text="rien" Foreground="LightGray" Margin="4 0" />
            </Grid>
        </UniformGrid>

        <GridSplitter Grid.Column="1" Width="2"/>
        <TextBox Grid.Column="2"/>
    </Grid>
</Window>
